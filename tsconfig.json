{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,          // <-- generate .map files
    "inlineSources": true,      // <-- optional, embed TS source into the map
    "inlineSourceMap": false,   // <-- make sure this is false if using sourceMap
	  "noEmit": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
